<%- include('partials/header') %>
    <title>Forget Password</title>

    <div class="container" style="padding-top: 30px;">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>Reset Password</h2>
                <% if(locals.error) { %>
                    <div class="alert alert-danger fade in">
                        <%= error %>
                    </div>
                    <% } %>
                        <% if(locals.success) { %>
                            <div class="alert alert-success fade in">
                                <%= success %>
                            </div>
                            <% } %>
                                <form method="post" action="/api/login/forgetPassword">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" name="email" placeholder="username@student.guc.edu.eg" value="<%=email%>" id="email" class="form-control" required/>
                                    </div>
                                    <div class="form-group text-center">
                                        <button type="submit" class="btn btn-success">Reset</button>
                                        <a class="btn btn-link" href="/api/login">Login</a>
                                    </div>
                                </form>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>